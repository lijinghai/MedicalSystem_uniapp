.uni-title {
  position: absolute;
  left: 2px;
  top: -12px;
}
.box {
  position: relative;
  z-index: 888;
}
.mask {
  position: fixed;
  z-index: 999;
  top: 0;
  right: 0;
  left: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
}
.mask.show {
  visibility: visible;
  opacity: 1;
}
.popop {
  width: 100%;
  min-height: 200rpx;
  background-color: #808080;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  transition: all 0.3s ease;
  -webkit-transform: translateY(100%);
          transform: translateY(100%);
  z-index: 1999;
}
.popop.show {
  -webkit-transform: translateY(0);
          transform: translateY(0);
}
.popop .picker_head {
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 44px;
  background-color: #fff;
  position: relative;
  text-align: center;
  font-size: 15px;
  justify-content: space-between;
}
.popop .picker_head:after {
  content: ' ';
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  height: 1px;
  border-bottom: 1px solid #e5e5e5;
  color: #e5e5e5;
  -webkit-transform-origin: 0 100%;
          transform-origin: 0 100%;
  -webkit-transform: scaleY(0.5);
          transform: scaleY(0.5);
}
.popop .picker_view {
  width: 100%;
  height: 200px;
  overflow: hidden;
  background-color: white;
  z-index: 666;
}
.popop .picker_view picker-view {
  height: 100%;
}
.popop .picker_view .item {
  text-align: center;
  width: 100%;
  line-height: 88rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 30rpx;
}

