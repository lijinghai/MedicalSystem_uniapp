.home swiper {
  width: 750rps;
  height: 380rps;
}
.home swiper image {
  height: 100%;
  width: 100%;
}
.hot_goods {
  background: #eee;
  overflow: hidden;
  margin-top: 10px;
}
.hot_goods .title {
  height: 50px;
  line-height: 50px;
  color: #87CEFF;
  text-align: center;
  letter-spacing: 20px;
  background-color: #fff;
  margin: 7rpx 0;
}
.nav {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.nav .nav_item {
  width: 25%;
  text-align: center;
}
.nav .nav_item view {
  width: 120rpx;
  height: 120rpx;
  background: #089cff;
  border-radius: 60rpx;
  margin: 10px auto;
  line-height: 50px;
  color: #fff;
  font-size: 70rpx;
}
.nav .nav_item .icon-xiaoxi {
  font-size: 75rpx;
}
.nav .nav_item text {
  font-size: 30rpx;
}

